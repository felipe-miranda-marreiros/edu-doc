{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@app/*": ["app"],
      "@entities/*": ["entities/*"],
      "@features/*": ["features/*"],
      "@providers/*": ["providers/*"],
      "@screens/*": ["screens/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"]
}
